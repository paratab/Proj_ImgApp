<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bolona_pig.proj_imgapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name">

            <!-- android:theme="@style/AppTheme.NoActionBar"> -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Register"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".Activity.Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Activity.UserManagement"
            android:label="@string/title_activity_user_management" />
        <activity
            android:name=".Activity.UserDetailEdit"
            android:label="@string/title_activity_user_detail_edit" />
        <activity
            android:name=".Activity.UserPasswordChange"
            android:label="@string/title_activity_user_password_change" />
        <activity
            android:name=".Activity.NoticeAdd"
            android:label="@string/title_activity_add_notice" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Activity.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".Activity.NoticeManagement"
            android:label="Notice Management" />
        <activity
            android:name=".Activity.NoticeEdit"
            android:label="Notice Edit" />
        <activity
            android:name=".Activity.SeenInfoAdd"
            android:label="@string/title_activity_seen_info_add" />
        <activity android:name=".Activity.SeenInfoDetail" />
        <activity
            android:name=".Activity.MainActivity2"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity.Main2Activity"></activity>
    </application>

</manifest>
