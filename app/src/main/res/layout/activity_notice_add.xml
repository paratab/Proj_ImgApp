<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/image_border" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost Person's name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtLnName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:nextFocusDown="@+id/edtLnBirthDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost Person BirthDate"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/edtLnBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="dd-mm-yyyy"
            android:inputType="text"
            android:nextFocusDown="@+id/edtLnLocation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost Location"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtLnPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:nextFocusDown="@+id/edtLnLostDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost Date"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtLnLostDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="dd-mm-yyyy"
            android:inputType="text"
            android:nextFocusDown="@+id/edtLnDetail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lost Detail"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtLnDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Notice Adder"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLnAdder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Contact"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvLnPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btNoticeAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a Notice"
            android:textSize="15sp" />


    </LinearLayout>
</ScrollView>